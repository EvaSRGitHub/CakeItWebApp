@using System.Collections.Generic
@using CakeItWebApp.ViewModels.Orders
@model ICollection<AllOrdersViewModel>

@{
    var count = 0;
}

@if (ViewData["FinishedOrder"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show m-4" role="alert">
        <strong style="font-size:2rem; color: forestgreen">@ViewData["SentEmail"]</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<main class="container-fluid">
    <div class="row">
        <div class="col-md-12 m-2">
            <h1>My Orders</h1>
            <hr class="hr-2" style="background-color: forestgreen">
            <table class="table table-hover">
                <thead>
                    <tr class="row">
                        <th scope="col" class="col-md-1 d-flex justify-content-center"><h5>#</h5></th>
                        <th scope="col" class="col-md-1 d-flex justify-content-center"><h5>Order Number</h5></th>
                        <th scope="col" class="col-md-2 d-flex justify-content-center"><h5>Order Date</h5></th>
                        <th scope="col" class="col-md-2 d-flex justify-content-center"><h5>Cutomer</h5></th>
                        <th scope="col" class="col-md-3 d-flex justify-content-center"><h5>Delivery Address</h5></th>
                        <th scope="col" class="col-md-1 d-flex justify-content-center"><h5>Delivery City</h5></th>
                        <th scope="col" class="col-md-1 d-flex justify-content-center"><h5>Order Total Value</h5></th>
                        <th scope="col" class="col-md-1 d-flex justify-content-center"><h5>Ordered Products</h5></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr class="row">
                            <th scope="row" class="col-md-1 d-flex"><h5>@count</h5></th>
                            <td class="col-md-1 d-flex"><h5>@item.OrderId</h5></td>
                            <td class="col-md-2 d-flex"><h5>@item.OrderDate</h5></td>
                            <td class="col-md-2 d-flex"><h5>@item.Customer</h5></td>
                            <td class="col-md-3 d-flex"><h5>@item.Address</h5></td>
                            <td class="col-md-1 d-flex"><h5>@item.City</h5></td>
                            <td class="col-md-1 d-flex"><h5>@item.TotalValue</h5></td>
                            <td class="col-md-1 d-flex justify-content-center">
                                <div>
                                    <a asp-controller="Orders" asp-action="OrderedProducts" asp-route-orderId="@item.OrderId" class="btn btn-info text-white">Details</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</main>



