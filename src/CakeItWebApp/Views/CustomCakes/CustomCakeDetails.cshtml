@using Newtonsoft.Json;
@model CakeItWebApp.ViewModels.CustomCake.CustomCakeOrderViewModel

@{
        TempData["OrderCustomCake"] = JsonConvert.SerializeObject(Model);
    }

<main class="container">
    <div class="row">
        <div class="col-md-4 customCakeContainer">
            <h1 class="text-center" style="color:saddlebrown">Your Custom Cake</h1>
            <hr style="border-color: saddlebrown" />
            <p>
                <em>Sponge:</em> @Model.Sponge Sponge
            </p>
            <p>
                <em>First Layer Cream:</em> @Model.FirstLayerCream Cream
            </p>
            <p>
                <em>Second Layer Cream:</em> @Model.SecondLayerCream Cream
            </p>
            <p>
                <em>Fillings:</em> @Model.Filling
            </p>
            <p>
                <em>Side Decoration:</em> @Model.SideDecoration
            </p>
            <p>
                <em>Top Decoration:</em> @Model.TopDecoration
            </p>
            <p>
                <em>Number of Slices:</em> @Model.NumberOfSlices
            </p>
            <p>
                <em>Price:</em> @Model.Price
            </p>
            <div class="d-inline justify-content-end">
                <a href="/CustomCakes/AddToCart" class="btn" style="background-color: saddlebrown; color:white">Add to Cart</a>
            </div>
            <div class="d-inline justify-content-right">
                <a href="javascript:void(0);" onclick="history.go(-1);" class="btn btn-info" role="button">Back</a>
            </div>
        </div>
        <div class="col-md-7 mt-3">
            <img class="img-fluid mt-5 mx-auto d-block float-right" src="@Model.Img" alt="">
        </div>
    </div>
    <!--div row-->
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}