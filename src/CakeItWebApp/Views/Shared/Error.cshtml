@model CakeItWebApp.ViewModels.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="alert alert-danger col-md-6 offset-md-3" role="alert">
    <h2><strong>Error!</strong></h2>
    @if (ViewData["Errors"] != null)
    {
        <h3>ViewData["Errors"]</h3>
    }
    else
    {
        @foreach (var item in Model.Errors)
        {
            <h3>@item</h3>
        }
    }
    <a href="javascript:void(0);" onclick="history.go(-1);" class="btn btn-info" role="button">Back</a>
</div>