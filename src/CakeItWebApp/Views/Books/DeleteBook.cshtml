@model CakeItWebApp.ViewModels.Books.BookIndexViewModel

@{

}

<main class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <section>
                <h1 class="text-center">Delete Book</h1>
                <hr class="bg-panda hr-2" />
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label asp-for="Title" class="text-center"></label>
                            <input asp-for="Title" class="form-control" placeholder="Title" value="@Model.Title" readonly="readonly">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label asp-for="Author" class="text-center"></label>
                            <input asp-for="Author" class="form-control" placeholder="Author" value="@Model.Author" readonly="readonly">
                            <span asp-validation-for="Author" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label asp-for="@Model.Pages" class="text-center"></label>
                            <input asp-for="@Model.Pages" type="number" min="1" class="form-control" placeholder="Pages" value="@Model.Pages" readonly="readonly">
                            <span asp-validation-for="Pages" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label asp-for="@Model.Description" class="text-center"></label>
                            <textarea asp-for="@Model.Description" class="form-control" cols="50" rows="10" placeholder="Description" value="@Model.Description" readonly="readonly"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label asp-for="DownloadUrl" class="text-center"></label>
                            <input asp-for="DownloadUrl" type="url" class="form-control" placeholder="Download Url" value="@Model.DownloadUrl" readonly="readonly">
                            <span asp-validation-for="DownloadUrl" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label asp-for="CoverUrl" class="text-center"></label>
                            <input asp-for="CoverUrl" type="url" class="form-control" placeholder="Cover Url" value="@Model.CoverUrl" readonly="readonly">
                            <span asp-validation-for="CoverUrl" class="text-danger"></span>
                        </div>
                    </div>
                    <hr class="bg-panda hr-2" />
                    <div class="button-holder d-flex justify-content-center">
                        <button type="submit" class="btn btn-info">Delete</button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</main>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}