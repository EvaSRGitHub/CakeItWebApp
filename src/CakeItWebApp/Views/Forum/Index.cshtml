@using System.Collections.Generic
@using CakeItWebApp.ViewModels.Forum

@model ICollection<PostIndexViewModel>

@{
    var tags = ViewData["Tags"] as string;
}

<!-- Page Content -->
<main class="container">
    <div class="row">
        <!-- Posts Column -->
        <div class="col-lg-8">
            <!-- Title -->
            <h1 class="mt-4">All Posts</h1>
            <hr>
            <!-- Single Post -->
            @foreach (var post in Model)
            {
                <div class="media mb-4">
                    <div class="media-body">
                        <a asp-controller="Forum" asp-action="PostDetails" asp-route-id="@post.Id"><h3 class="mt-0">@post.Title</h3></a>
                        <p class="lead">by @post.Author</p>
                        <p class="d-inline">
                            <em>Created On: <strong>@post.CreatedOn</strong>,</em>
                        </p>
                        <p class="d-inline">
                            <em>Number of Comments: <strong>@post.CommentCount</strong></em>
                        </p>
                    </div>
                </div>
                <!--Post Tags-->
                <div class="mb-4">
                    @foreach (var tag in post.Tags.Split(new[] { ',', ' ' }, StringSplitOptions.RemoveEmptyEntries))
                    {
                        <span class="badge badge-dark">@tag</span>
                    }
                </div>

                <hr style="background-color: black">
            }
        </div>
        <!-- Sidebar Widgets Column -->
        <div class="col-md-4">
            <!-- Search Widget -->
            <div class="card my-4">
                <h5 class="card-header">Search</h5>
                <div class="card-body">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-secondary" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>

            <!-- Categories Widget -->
            <div class="card my-4">
                <h5 class="card-header">Tags</h5>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <ul class="list-unstyled mb-0">
                                @foreach (var tag in tags.Split(','))
                                {
                                    <li>
                                        <a asp-controller="Forum" asp-action="PostsByTag" asp-route-tag="@tag">@tag</a>
                                    </li>
                                }
                            </ul>
                        </div>
                        @*<div class="col-lg-6">
                                <ul class="list-unstyled mb-0">
                                    <li>
                                        <a href="#">JavaScript</a>
                                    </li>
                                    <li>
                                        <a href="#">CSS</a>
                                    </li>
                                    <li>
                                        <a href="#">Tutorials</a>
                                    </li>
                                </ul>
                            </div>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.row -->
</main>
